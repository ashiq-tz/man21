<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MAN 21</title>
    <meta name="description" content="Create your account at MAN 21" />
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css"
    />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/css/select2.min.css" rel="stylesheet" />

    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Inter:wght@400;500;700&family=Work+Sans:wght@400;500&family=SF+Pro+Display:wght@400;500&family=Roboto:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <!-- IMPORTANT: DO NOT REMOVE THIS SCRIPT TAG OR THIS VERY COMMENT! -->
    <script src="https://cdn.gpteng.co/gptengineer.js" type="module"></script>

    <style>
      .dropdown{
        position: relative;
        display: inline-block;
      }
      .dropdown-content{
        display: none;
        position: absolute;
        background-color: white;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        right: 0;
      }
      .dropdown-content a{
        text-decoration: none;
        color: black;
        padding: 12px 16px;
        display: block;
        width: 100%;
      }
      .dropdown-content a:hover{
        background-color: #e7e6e6;
      }
      .dropdown:hover .dropdown-content{
        display: block;
      }
      .header{
        position: relative;
        z-index: 500;

      }

    </style>

  </head>

  <body>
    <!-- Header -->
    <header class="header">
      <div class="header-container">
        <a href="/" class="logo">
          <img
            src="https://cdn.builder.io/api/v1/image/assets/TEMP/7ddf8ec9dd2f8f977641f573147e231659dfa812"
            alt="MAN 21 Logo"
          />
        </a>
        <!-- <div class="search-bar d-flex align-items-center">
          <i class="ti ti-search me-2"></i>
          <input type="text" class="form-control search-input" placeholder="Search">
        </div> -->
        
        
        <nav class="main-nav">
          <a href="/" class="active">Home</a>
          <a href="/about">About</a>
          <a href="/contact">Contact Us</a>
          <!-- <a href="/blog">Blog</a> -->
          <% if (typeof user !== 'undefined' && user) { %>
            <div class="dropdown">
              <a href="#" class="sign-in-link"><%= user.name %></a>
              <div class="dropdown-content">
                <a href="/userProfile">Profile</a>
                <a href="/logout">Logout</a>
              </div>
            </div>
          <% } else { %>
            <a href="/login">Login</a>
            <a href="/signup">Signup</a>
          <% } %>
          
          

        </nav>
        <div class="action-buttons">
          <button aria-label="Favorites">
            <i class="ti ti-heart"></i>
          </button>
          <button aria-label="Shopping Cart">
            <i class="ti ti-shopping-cart"></i>
          </button>
          <button aria-label="User Account">
            <i class="ti ti-user"></i>
          </button>
        </div>
      </div>
    </header>