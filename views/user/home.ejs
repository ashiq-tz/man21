            <div class="product-card">
              <div class="product-image-container">
                <img src="/uploads/product-images/<%= product.productImage && product.productImage.length > 0 ? product.productImage[0] : 'placeholder.jpg' %>" alt="<%= product.productName %>" class="product-image" />
