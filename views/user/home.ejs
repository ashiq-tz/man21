<%- include("../../views/partials/user/header") %>
<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Work Sans', 'SF Pro Display', 'Roboto', sans-serif;
}
body {
  background-color: #fff;
  color: #000;
}
.app-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.header {
  width: 100%;
}
.header-main {
  display: flex;
  align-items: center;
  height: 88px;
  background-color: white;
  padding: 0 40px;
}
.logo {
  width: 210px;
  height: 56px;
  margin-right: 96px;
}
.search-bar {
  display: flex;
  align-items: center;
  gap: 8px;
  width: 329px;
  background-color: #f5f5f5;
  padding: 16px;
  border-radius: 8px;
}
.search-input {
  background-color: transparent;
  outline: none;
  border: none;
  width: 100%;
  font-size: 14px;
  color: #656565;
}
.nav-menu {
  display: flex;
  gap: 52px;
  margin-left: 28px;
}
.nav-item {
  background: none;
  border: none;
  color: black;
  font-size: 16px;
  cursor: pointer;
  transition: color 0.3s;
}
.nav-item:hover {
  color: #666;
}
.nav-item.active {
  font-weight: 600;
}
.header-icons {
  display: flex;
  gap: 24px;
  margin-left: auto;
}
.icon-button {
  background: none;
  border: none;
  cursor: pointer;
  transition: color 0.3s;
}
.icon-button:hover {
  color: #666;
}
.category-menu {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 65px;
  height: 48px;
  background-color: #8B8E99;
}
.category-item {
  background: none;
  border: none;
  color: #000;
  font-size: 17px;
  font-weight: 600;
  opacity: 0.75;
  cursor: pointer;
  transition: opacity 0.3s;
}
.category-item:hover {
  opacity: 1;
}
.category-divider {
  width: 2px;
  height: 24px;
  opacity: 0.2;
  background-color: black;
}
.hero-section {
  width: 100%;
}
.hero-section img {
  width: 100%;
  height: 525px;
  object-fit: cover;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 87px;
}
.section-header h2 {
  color: #0F0F0F;
  font-size: 31px;
  letter-spacing: 0.75px;
}
.view-all {
  color: black;
  font-size: 18px;
  text-transform: uppercase;
  text-decoration: none;
}
.view-all:hover {
  text-decoration: underline;
}
.product-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 37px;
}
.product-card {
  display: flex;
  flex-direction: column;
  gap: 13px;
}
.product-image-container {
  position: relative;
}
.product-image {
  width: 100%;
  height: 314px;
  object-fit: cover;
}
.favorite-button {
  position: absolute;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.41);
  right: 0;
  top: 0;
  border: none;
  transition: background-color 0.3s;
  cursor: pointer;
}
.favorite-button:hover {
  background-color: rgba(255, 255, 255, 0.6);
}
.favorite-button.active i {
  color: #e53e3e;
}
.product-details {
  display: flex;
  flex-direction: column;
  gap: 3px;
}
.product-brand {
  color: #7E7F7F;
  font-size: 15px;
}
.product-name {
  color: black;
  font-size: 16px;
}
.product-color {
  color: #9A9A9A;
  font-size: 10px;
  letter-spacing: 0.75px;
}
.product-price {
  color: #0F0F0F;
  font-size: 17px;
}
.new-arrivals {
  margin-bottom: 100px;
  padding: 0 36px;
}
.trending-sneakers {
  margin-bottom: 100px;
  padding: 0 36px;
}
.featured-section {
  margin-bottom: 100px;
  padding: 0 40px;
}
.featured-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 660px;
  grid-template-rows: repeat(2, auto);
  gap: 37px;
  margin-bottom: 37px;
}
.featured-image {
  grid-column: 3;
  grid-row: 1 / span 2;
}
.featured-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.banner-section {
  margin-bottom: 168px;
  padding: 0 45px;
}
.banner-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 38px;
}
.banner-image {
  width: 100%;
  height: 660px;
  object-fit: cover;
}
.stores-section {
  padding: 0 35px;
}
.stores-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 35px;
}
.store-image {
  width: 100%;
  height: 433px;
  object-fit: cover;
}
.footer {
  background-color: #171717;
  color: white;
  padding: 64px 40px;
  margin-top: auto;
}
.footer-content {
  max-width: 1200px;
  margin: 0 auto;
}
.footer-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32px;
}
.footer-column h3 {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 24px;
}
.footer-column ul {
  list-style: none;
}
.footer-column ul li {
  margin-bottom: 12px;
  cursor: pointer;
}
.social-icons {
  display: flex;
  gap: 16px;
  margin-bottom: 24px;
}
.social-icons i {
  font-size: 24px;
  cursor: pointer;
}
.newsletter h4 {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 16px;
}
.newsletter-form {
  display: flex;
}
.newsletter-form input {
  background-color: #333;
  padding: 8px 16px;
  border-radius: 4px 0 0 4px;
  border: none;
  outline: none;
  color: white;
  width: 100%;
}
.newsletter-form button {
  background-color: white;
  color: black;
  padding: 8px 16px;
  border-radius: 0 4px 4px 0;
  border: none;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.3s;
}
.newsletter-form button:hover {
  background-color: #e5e5e5;
}
.subscription-message {
  margin-top: 8px;
  padding: 8px 16px;
  background-color: rgba(0, 255, 0, 0.1);
  color: #2f9e44;
  border-radius: 4px;
}
.hidden {
  display: none;
}
.footer-bottom {
  margin-top: 64px;
  padding-top: 32px;
  border-top: 1px solid #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.copyright {
  font-size: 14px;
  color: #999;
}
.footer-links {
  display: flex;
  gap: 24px;
  font-size: 14px;
  color: #999;
}
.footer-links span {
  cursor: pointer;
}
@media (max-width: 1200px) {
  .logo {
    margin-right: 48px;
  }
  .featured-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  .featured-image {
    grid-column: span 2;
    grid-row: 1;
  }
}
@media (max-width: 992px) {
  .header-main {
    padding: 0 20px;
  }
  .product-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  .stores-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  .footer-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (max-width: 768px) {
  .logo {
    width: 150px;
    margin-right: 20px;
  }
  .nav-menu {
    display: none;
  }
  .category-menu {
    justify-content: flex-start;
    overflow-x: auto;
    gap: 30px;
    padding: 0 20px;
  }
  .banner-grid {
    grid-template-columns: 1fr;
  }
  .featured-grid {
    grid-template-columns: 1fr;
    grid-template-rows: auto;
  }
  .featured-image {
    grid-column: 1;
    grid-row: 2;
  }
}
@media (max-width: 576px) {
  .header-main {
    padding: 0 10px;
  }
  .search-bar {
    flex: 1;
    width: auto;
  }
  .product-grid,
  .stores-grid,
  .footer-grid {
    grid-template-columns: 1fr;
  }
  .footer-bottom {
    flex-direction: column;
    gap: 16px;
  }
}
</style>
</head>
<body>
<div class="app-container">
  <div class="category-menu">
