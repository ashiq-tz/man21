  // Handle favorite buttons
  const favoriteButtons = document.querySelectorAll('.favorite-button');
  favoriteButtons.forEach(button => {
    button.addEventListener('click', function() {
      const isFavorite = this.getAttribute('data-favorite') === 'true';
      this.setAttribute('data-favorite', !isFavorite);
      
      // Update icon
      const icon = this.querySelector('i');
      if (!isFavorite) {
        icon.classList.remove('ti-heart');
        icon.classList.add('ti-heart-filled');
        icon.style.color = '#e53e3e';
      } else {
        icon.classList.remove('ti-heart-filled');
        icon.classList.add('ti-heart');
        icon.style.color = '';
      }
    });
  });

  // Handle newsletter subscription
  const newsletterForm = document.getElementById('newsletter-form');
  const subscriptionMessage = document.getElementById('subscription-message');
  
  if (newsletterForm) {
    newsletterForm.addEventListener('submit', function(e) {
      e.preventDefault();
      const emailInput = this.querySelector('input[type="email"]');
      if (emailInput.value) {
        console.log('Subscribing email:', emailInput.value);
        
        // Show success message
        subscriptionMessage.classList.remove('hidden');
        emailInput.value = '';
        
        // Hide message after 3 seconds
        setTimeout(() => {
          subscriptionMessage.classList.add('hidden');
        }, 3000);
      }
    });
  }

  // Handle header icons
