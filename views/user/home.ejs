    <div class="category-divider"></div>
    <button class="category-item">Trending</button>
    <div class="category-divider"></div>
    <button class="category-item">Superkicks</button>
    <div class="category-divider"></div>

    <button class="category-item">
      <a href="/products?category=Men" class="category-item" style="text-decoration: none;">Men</a>
    </button>
   

    <div class="category-divider"></div>
    
    <button class="category-item">Women</button>
    <div class="category-divider"></div>
    <button class="category-item">Kids</button>
  </div>
  <main>
    <a href="/products" class="hero-section">
      <section>
        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/1a3e276f947cce2ab81fb274dfed5e114a277095" alt="Adidas Samba" />
      </section>
    </a>
    
