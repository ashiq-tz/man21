<%- include("../../views/partials/user/header") %>

<div class="container" style="margin-top: 50px;">
  <h2>Order Details</h2>
  <hr>
  <p><strong>Order ID:</strong> <%= order.orderId %></p>
  <p><strong>Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %></p>
  <p><strong>Status:</strong> <%= order.status %></p>
  
  <h3>Products</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Product</th>
        <th>Size</th>
        <th>Quantity</th>
        <th>Price</th>
       
       
      </tr>
    </thead>
    <tbody>
      
        <tr>
          <td>
            <img src="/uploads/product-images/<%= order.product?.productImage?.[0] || 'placeholder.jpg' %>" alt="<%= order.product?.productName || 'Product' %>" style="width: 50px; height: 50px; object-fit: cover;">
          </td>
          <td><%= order.product?.productName %></td>
          <td><%= order.size %></td>
          <td><%= order.quantity %></td>
          <td>₹<%= order.price.toLocaleString('en-IN') %></td>
         
          
        </tr>
    </tbody>
  </table>
  
  <h3>Billing Details</h3>
  <p><strong>Price:</strong> ₹<%= order.price.toLocaleString('en-IN') %></p>
  <p><strong>Total Price:</strong> ₹<%= order.totalPrice.toLocaleString('en-IN') %></p>
  <p><strong>Discount:</strong> ₹<%= order.discount.toLocaleString('en-IN') %></p>
  <p><strong>Final Amount:</strong> ₹<%= order.finalAmount.toLocaleString('en-IN') %></p>  
  <p><strong>Payment:</strong> <%= order.paymentMethod %></p>
  
  <h3>Shipping Address</h3>
  <% if (order.address) { %>
    <p><strong>Address Type:</strong> <%= order.address.addressType %></p>
    <p><strong>Name:</strong> <%= order.address.name %></p>
    <p><strong>City:</strong> <%= order.address.city %></p>
    <p><strong>State:</strong> <%= order.address.state %></p>
    <p><strong>Pincode:</strong> <%= order.address.pincode %></p>
    <p><strong>Landmark:</strong> <%= order.address.landmark %></p>
    <p><strong>Phone:</strong> <%= order.address.phone %></p>
    <p><strong>Alternate Phone:</strong> <%= order.address.altPhone %></p>
  <% } else { %>
    <p>No shipping address available.</p>
  <% } %>
  
  <br>
  <div style="margin-bottom: 50px;">
    <a href="/order/invoice?orderId=<%= order.orderId %>" class="btn btn-primary">Download Invoice (PDF)</a>
    <a href="/userProfile#orders" class="btn btn-secondary">Back to My Orders</a>
  </div>
</div>

<%- include("../../views/partials/user/footer") %>
