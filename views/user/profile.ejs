<%- include("../../views/partials/user/header") %>

<style>
  /* Keep existing reset and background */
  body {
    background-color: #f7f7f7;
  }
  .main {
    padding: 30px 0;
  }

  /* Left Menu (unchanged) */
  .dashboard-menu {
    background-color: #fff;
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  .dashboard-menu .nav-link {
    font-weight: 500;
    color: #333;
    margin-bottom: 10px;
    border-radius: 6px;
    transition: background-color 0.3s ease;
  }
  .dashboard-menu .nav-link.active,
  .dashboard-menu .nav-link:hover {
    background-color: #f0f0f0;
    color: #000;
  }
  .dashboard-menu .logout-btn {
    background-color: #ff4c4c;
    color: #fff;
    margin-top: 15px;
    width: 100%;
    text-align: center;
  }
  .dashboard-menu .logout-btn:hover {
    background-color: #e43e3e;
    color: #fff;
  }

  /* Modern Right Content Card Styling */
  .card {
    border-radius: 10px;
    background-color: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border: none;
    margin-bottom: 20px;
  }
  /* Center each tab's card by limiting width and using auto margins */
  .card.mx-auto {
    max-width: 600px; /* Adjust as you like */
  }
  .card-header {
    background-color: #fff;
    border-bottom: 1px solid #eaeaea;
    border-radius: 10px 10px 0 0;
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .card-header h5 {
    margin: 0;
    font-weight: 600;
  }
  .card-body {
    padding: 30px 20px;
    text-align: center; /* Center the content */
  }
  /* Buttons */
  .btn-success {
    background-color: #3b74f2;
    border-color: #3b74f2;
  }
  .btn-success:hover {
    background-color: #345fcb;
    border-color: #345fcb;
  }
  .btn-outline-secondary {
    border-radius: 6px;
  }
  /* Breadcrumb */
  .page-header.breadcrumb-wrap {
    background-color: #aeacad;
    padding-top: 10px;
    padding-bottom: 1px;
  }
  .breadcrumb {
    display: flex;
    align-items: center;
    font-size: 16px;
    color: #121311;
  }
  .breadcrumb a {
    color: #007bff;
    text-decoration: none;
    margin: 0 5px;
  }
  .breadcrumb a:hover {
    color: #0056b3;
  }
  .breadcrumb span {
    margin: 0 5px;
    color: #999;
  }
</style>

<main class="main">
  <!-- Breadcrumb (optional) -->
  <div class="page-header breadcrumb-wrap mb-3">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span> Profile <span></span> Account
      </div>
    </div>
  </div>

  <section class="pt-10 pb-10">
    <div class="container">
      <div class="row">
        <!-- LEFT SIDEBAR -->
        <div class="col-md-4 col-lg-3">
          <div class="dashboard-menu">
            <ul class="nav flex-column" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="mydetails-tab" data-bs-toggle="tab" href="#mydetails" role="tab"
                  aria-controls="mydetails" aria-selected="true">
                  <i class="fi-rs-user mr-10"></i> My Details
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="address-tab" data-bs-toggle="tab" href="#address" role="tab"
                  aria-controls="address" aria-selected="false">
                  <i class="fi-rs-marker mr-10"></i> Address
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab"
                  aria-controls="orders" aria-selected="false">
                  <i class="fi-rs-shopping-bag mr-10"></i> Orders
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="wallet-tab" data-bs-toggle="tab" href="#wallet" role="tab"
                  aria-controls="wallet" aria-selected="false">
                  <i class="fi-rs-wallet mr-10"></i> Wallet
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="wallet-history-tab" data-bs-toggle="tab" href="#wallet-history" role="tab"
                  aria-controls="wallet-history" aria-selected="false">
                  <i class="fi-rs-history mr-10"></i> Wallet History
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="referrals-tab" data-bs-toggle="tab" href="#referrals" role="tab"
                  aria-controls="referrals" aria-selected="false">
                  <i class="fi-rs-megaphone mr-10"></i> Referrals
                </a>
              </li>
            </ul>
            <a class="btn logout-btn" href="/logout">
              <i class="fi-rs-sign-out mr-10"></i> Logout
            </a>
          </div>
        </div>

        <!-- RIGHT CONTENT -->
        <div class="col-md-8 col-lg-9">
          <div class="tab-content dashboard-content">
            
            <!-- My Details -->
            <div class="tab-pane fade show active" id="mydetails" role="tabpanel" aria-labelledby="mydetails-tab">
              <div class="card mx-auto">
                <div class="card-header">
                  <h5 class="mb-0">My Details</h5>
                  <a href="/profile/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
                </div>
                <div class="card-body">
                  <p><strong>Name:</strong> <%= user.name %></p>
                  <p><strong>Phone Number:</strong> <%= user.phone %></p>
                  <p><strong>Email:</strong> <%= user.email %></p>
                  <div class="mt-3">
                    <a href="/change-email" class="btn btn-sm btn-success me-2">Change Email</a>
                    <a href="/change-password" class="btn btn-sm btn-success">Change Password</a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Address Tab -->
            <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
              <div class="card mx-auto">
                <div class="card-header">
                  <h5 class="mb-0">My Address</h5>
                </div>
                <div class="card-body">
                  <% if(user.addresses && user.addresses.length > 0){ %>
                    <% user.addresses.forEach(function(address, index){ %>
                      <div class="card mb-3">
                        <div class="card-header">
                          <h5 class="mb-0"><%= address.title || ('Address ' + (index + 1)) %></h5>
                        </div>
                        <div class="card-body text-start">
                          <address>
                            <%= address.line1 %><br>
                            <%= address.line2 %><br>
                            <%= address.city %>, <%= address.state %> - <%= address.zip %>
                          </address>
                          <div class="d-flex justify-content-between">
                            <a href="/edit-address/<%= address.id %>" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/delete-address/<%= address.id %>" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this address?');">
                              Delete
                            </a>
                          </div>
                        </div>
                      </div>
                    <% }); %>
                  <% } else { %>
                    <p>No address found.</p>
                  <% } %>
                  <a href="/addAddress">
                    <button class="btn btn-primary mt-2">Add Address</button>
                  </a>
                </div>
              </div>
            </div>

            <!-- Orders Tab -->
            <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
              <div class="card mx-auto">
                <div class="card-header">
                  <h5 class="mb-0">Your Orders</h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table text-start">
                      <thead>
                        <tr>
                          <th>Order</th>
                          <th>Status</th>
                          <th>Total</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(user.orders && user.orders.length > 0){ %>
                          <% user.orders.forEach(function(order){ %>
                            <tr>
                              <td>#<%= order.id %></td>
                              <td><%= order.status %></td>
                              <td>₹<%= order.total %></td>
                              <td>
                                <a href="/order/<%= order.id %>" class="btn btn-sm btn-primary">View</a>
                              </td>
                            </tr>
                          <% }); %>
                        <% } else { %>
                          <tr>
                            <td colspan="4">No orders found.</td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <!-- Wallet Tab -->
            <div class="tab-pane fade" id="wallet" role="tabpanel" aria-labelledby="wallet-tab">
              <div class="card mx-auto">
                <div class="card-header">
                  <h5 class="mb-0">Wallet</h5>
                </div>
                <div class="card-body">
                  <p><strong>Current Balance:</strong> ₹<%= user.walletBalance %></p>
                  <form action="/add-money" method="POST" class="mt-3">
                    <div class="form-group mb-3">
                      <label for="walletAmount">Amount</label>
                      <input type="number" class="form-control" id="walletAmount" name="amount" required>
                    </div>
                    <button type="submit" class="btn btn-success">Add Money</button>
                  </form>
                </div>
              </div>
            </div>

            <!-- Wallet History Tab -->
            <div class="tab-pane fade" id="wallet-history" role="tabpanel" aria-labelledby="wallet-history-tab">
              <div class="card mx-auto">
                <div class="card-header">
                  <h5 class="mb-0">Wallet History</h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table text-start">
                      <thead>
                        <tr>
                          <th>Date</th>
                          <th>Status</th>
                          <th>Amount</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(user.walletHistory && user.walletHistory.length > 0){ %>
                          <% user.walletHistory.forEach(function(entry){ %>
                            <tr>
                              <td><%= entry.date %></td>
                              <td><%= entry.status %></td>
                              <td>₹<%= entry.amount %></td>
                            </tr>
                          <% }); %>
                        <% } else { %>
                          <tr>
                            <td colspan="3">No wallet history found.</td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <!-- Referrals Tab -->
            <div class="tab-pane fade" id="referrals" role="tabpanel" aria-labelledby="referrals-tab">
              <div class="card mx-auto">
                <div class="card-header">
                  <h5 class="mb-0">Referrals</h5>
                </div>
                <div class="card-body">
                  <p>Refer your friends and earn money!</p>
                  <p>Share this link: <strong><%= user.referralLink %></strong></p>
                  <p>Earned: ₹<%= user.referralEarnings %></p>
                </div>
              </div>
            </div>
            <!-- End Tab Content -->

          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include("../../views/partials/user/footer") %>
