<%- include("../../views/partials/user/header") %>

<style>
  .cart-container {
    padding: 30px 0;
    background-color: #f7f7f7;
  }
  .cart-heading {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 20px;
  }
  /* Single Cart Row */
  .cart-row {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 8px;
    margin-bottom: 15px;
    padding: 15px;
  }
  .cart-row.out-of-stock {
    border: 2px solid red;
  }
  /* Product Image */
  .cart-product-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 6px;
    margin-right: 15px;
  }
  /* Product Info (Name, Size, Price, Subtotal) */
  .cart-product-info {
    display: flex;
    flex-direction: column;
    flex: 1; /* Take remaining space */
  }
  .cart-product-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 4px;
  }
  .cart-product-size {
    font-size: 0.85rem;
    color: #555;
    margin-bottom: 4px;
  }
  .cart-product-price {
    font-size: 1rem;
    font-weight: 500;
    color: #0000007a;
  }
  .cart-product-subtotal {
    font-size: 0.8rem;
    font-weight: 100;
    color: #222d349b;
    margin-top: 4px;
  }
  /* Quantity Controls */
  .cart-quantity-controls {
    display: flex;
    align-items: center;
    margin-right: 15px; /* Some spacing before the remove button */
  }
  .quantity-btn {
    border: none;
    background-color: #f0f0f0;
    width: 32px;
    height: 32px;
    font-weight: 700;
    cursor: pointer;
    margin: 0 5px;
  }
  /* Remove Button (the X on the far right) */
  .cart-remove-btn {
    border: none;
    background-color: transparent;
    color: #555;
    font-size: 1.2rem;
    font-weight: 700;
    cursor: pointer;
  }
  .cart-remove-btn:hover {
    color: #000;
  }
  /* Order Summary */
  .order-summary {
    background-color: #fff;
    border-radius: 8px;
    padding: 20px;
  }
  .order-summary h5 {
    font-weight: 600;
    margin-bottom: 20px;
  }
  .summary-line {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
    font-size: 0.95rem;
  }
  .summary-total {
    display: flex;
    justify-content: space-between;
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: 15px;
  }
  .checkout-btn {
    width: 100%;
    margin-top: 20px;
  }
  .disabled {
    pointer-events: none;
    opacity: 0.6;
  }
</style>

<main class="cart-container">
  <div class="container">
    <h2 class="cart-heading">Products</h2>
    <div class="row">
      <!-- LEFT: Cart Items -->
      <div class="col-lg-8 mb-4">
        <% if (cart && cart.items.length > 0) { 
          let totalStockIssues = false;
        %>
          <% cart.items.forEach(item => { 
               const product = item.productId;
               // Find the variant for the cart item's size:
               const variant = product.variants.find(v => v.size.toString() === item.size.toString());
               const availableStock = variant ? variant.stock : 0;
               // Determine if this item is out of stock (for its selected size)
               const outOfStock = (availableStock === 0);
               
               if (outOfStock) totalStockIssues = true;
          %>
            <!-- Single Cart Row -->
            <div class="cart-row <%= outOfStock ? 'out-of-stock' : '' %>">
              <!-- Product Image (clickable) -->
              <a href="/product/<%= product._id %>">
                <img 
                  src="/uploads/product-images/<%= product.productImage && product.productImage.length
                        ? product.productImage[0] 
                        : 'placeholder.jpg' %>" 
                  alt="<%= product.productName %>"
                  class="cart-product-image"
                />
              </a>
              
              <!-- Product Info -->
              <div class="cart-product-info">
                <div class="cart-product-title"><%= product.productName %></div>
                <!-- Show the selected size -->
                <div class="cart-product-size">Size: <%= item.size %></div>
                <div class="cart-product-price">₹<%= item.price.toLocaleString('en-IN') %></div>
                <div class="cart-product-subtotal">
                  Total: ₹<%= item.totalPrice.toLocaleString('en-IN') %>
                </div>
              </div>

              <!-- Quantity Controls (only if not out of stock) -->
              <% if (!outOfStock) { %>
                <div class="cart-quantity-controls">
                  <button
                    class="quantity-btn"
                    onclick="updateQuantity('<%= product._id %>', '<%= item.size %>', 'decrement')"
                  >-</button>
                  <span><%= item.quantity %></span>
                  <button
                    class="quantity-btn"
                    onclick="updateQuantity('<%= product._id %>', '<%= item.size %>', 'increment')"
                  >+</button>
                </div>
              <% } else { %>
                <div style="color: red; margin-right: 15px;">Out of stock</div>
              <% } %>

              <!-- Remove Button (X) including size in URL -->
              <button 
                class="cart-remove-btn"
                onclick="window.location.href='/removeFromCart?productId=<%= product._id %>&size=<%= item.size %>'"
              >
                ×
              </button>
            </div>
          <% }) %>

      <!-- PAGINATION NAV -->
      <% if (totalPages > 1) { %>
        <nav aria-label="Cart pages" class="d-flex justify-content-center">
          <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
          </ul>
        </nav>
      <% } %>



      </div>

      <!-- RIGHT: Order Summary -->
      <div class="col-lg-4">
        <div class="order-summary">
          <h5>Order Summary</h5>
          <div class="summary-line">
            <span>Subtotal:</span>
            <span>₹<%= subtotal.toLocaleString('en-IN') %></span>
          </div>
          <div class="summary-line">
            <span>You Saved:</span>
            <span>₹<%= youSaved.toLocaleString('en-IN') %></span>
          </div>
          <div class="summary-line">
            <span>Delivery Fee:</span>
             <span class="text-secondary">Free Delivery</span>
          </div>
          <hr />
          <div class="summary-total">
            <span>Total:</span>
            <span>₹<%= subtotal.toLocaleString('en-IN') %></span>
          </div>
          <!-- Disable checkout if any product is out of stock -->
          <a 
            href="/checkout" 
            class="btn btn-success checkout-btn <%= totalStockIssues ? 'disabled' : '' %>"
          >
            Go to Checkout
          </a>
        </div>
      <% } else { %>
        <p>Your cart is empty.</p>
      <% } %>
      </div>
    </div>
  </div>
</main>

<%- include("../../views/partials/user/footer") %>

<!-- jQuery, SweetAlert2, and (optionally) Bootstrap 4.6 JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
  function updateQuantity(productId, size, action) {
    $.ajax({
      url: '/updateCartItemQuantity',
      method: 'POST',
      data: { productId: productId, size: size, action: action },
      success: function(response) {
        if (response.success) {
          Swal.fire({
            icon: 'success',
            title: 'Updated',
            text: response.message,
            timer: 1500,
            showConfirmButton: false
          }).then(() => location.reload());
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: response.message
          });
        }
      },
      error: function() {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Something went wrong.'
        });
      }
    });
  }
</script>
