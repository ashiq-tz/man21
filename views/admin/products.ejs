<%- include("../../views/partials/admin/header") %>
<%- include("../../views/partials/admin/sidebar", { activePage: 'products' } ) %>

<!-- Products-specific styles (placed directly in the body, no extra <head> tag) -->
<style>
  /* Root background */
  body {
    background: #e8ecec;
  }
  
  /* MAIN CONTENT WRAPPER */
  .main-content {
    padding: 20px;
    min-height: 100vh;
    flex: 1;
  }
  
  /* CARD / CONTAINER for the Products section */
  .products-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    padding: 20px;
  }
  
  /* PAGE TITLE */
  .products-header {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }
  .products-header h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: #333;
  }
  
  /* SEARCH BAR */
  .search-bar {
    display: flex;
    justify-content: flex-start;
    margin-top: 10px;
    margin-bottom: 20px;
  }
  .search-container {
    display: flex;
    width: 400px;
    border: 1px solid #ccc;
    border-radius: 50px;
    overflow: hidden;
    background-color: #fff;
  }
  .search-container input {
    flex: 1;
    border: none;
    padding: 0.6rem 1rem;
    outline: none;
    font-size: 0.95rem;
  }
  .search-container button {
    background: #0dcaf0;
    border: none;
    color: #fff;
    padding: 0.6rem 1.2rem;
    font-size: 0.95rem;
    cursor: pointer;
    transition: background 0.3s ease;
  }
  .search-container button:hover {
    background: #0bb8da;
  }
  
  /* TABLE WRAPPER */
  .table-container {
    margin-top: 10px;
    overflow-x: auto;
  }
  
  /* TABLE STYLING */
  table {
  width: 100%;
  border-collapse: collapse;
  background: #fff;
  border-radius: 6px;
  overflow: hidden;
  /* table-layout: fixed; forces fixed column widths */
}

thead tr {
  background-color: #f2f2f2;
  text-transform: uppercase;
  font-size: 0.85rem;
  color: #555;
}

th, td {
  padding: 12px 15px;
  border-bottom: 1px solid #eee;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  /* white-space: nowrap;  Prevents wrapping and keeps columns uniform */
}
  
  /* BUTTON STYLES */
  .btn {
    padding: 8px 12px;
    border-radius: 4px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease;
    color: #fff;
    text-decoration: none;
    display: inline-block;
  }
  .btn-info {
    background: #0dcaf0;
  }
  .btn-info:hover {
    background: #0bb8da;
  }
  .btn-danger {
    background: #dc3545;
  }
  .btn-danger:hover {
    background: #c82333;
  }
  .btn-success {
    background: #28a745;
  }
  .btn-success:hover {
    background: #218838;
  }
</style>

<div class="main-content">
  <!-- CARD-LIKE CONTAINER -->
  <div class="products-card">
    <!-- TITLE -->
    <div class="products-header">
      <h2>Products</h2>
    </div>
    
    <!-- SEARCH BAR -->
    <div class="search-bar">
      <form action="" method="get">
        <div class="search-container">
          <input type="text" placeholder="Search products or brands" name="search">
          <button type="submit">Search</button>
        </div>
      </form>
    </div>
  
    <!-- TABLE -->
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Product name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Sale Price</th>
            <th>Offer Price</th>
            <th>Offer</th>
            <th>Quantity</th>
            <th>Action</th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = data.length - 1; i >= 0; i--) { %>
          <tr>
            <td><%= data[i].productName %></td>
            <td><%= data[i].brand %></td>
            <td><%= data[i].category.name %></td>
            <td><%= data[i].salePrice %></td>
            <td></td>
            <td>
              <button class="btn btn-info" style="width: 100px;">Add Offer</button>
              <button class="btn btn-info" style="width: 100px;">Remove</button>
            </td>
            <td>20</td>
            <td>
              <button class="btn btn-danger" style="width: 80px;">Block</button>
              <button class="btn btn-success" style="width: 80px;">Unblock</button>
            </td>
            <td>
              <button class="btn btn-info" style="width: 80px;">Edit</button>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- PAGINATION -->
  <div class="container mt-3">
    <nav aria-label="Page navigation">
      <% let current = Number(currentPage); %>
      <ul class="pagination justify-content-center mb-20">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= (i === current) ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
  

<%- include("../../views/partials/admin/footer") %>
